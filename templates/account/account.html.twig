{% extends 'base.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}
{% if is_granted('ROLE_USER') %}
<!-- Main Content -->
<div class="container my-5 flex-grow-1">
    <div class="row">
        <!-- Profile Information -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white text-center">
                    <h5 class="mb-0 text-center">Profil</h5>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
                    <img src="https://img.freepik.com/vecteurs-premium/avatar-footballeur-francais_24908-33227.jpg" style="width: 200px; height: 200px;" class="rounded-circle mb-3" alt="User Avatar">
                    <h6 class="mb-1 text-black">{{ accountInfo.firstname }} {{ accountInfo.lastname }}</h6>
                    <p class="text-muted mb-1">{{ accountInfo.email }}</p>
                    <p class="text-muted mb-0">{{ accountInfo.clubName }}</p>
                    <p></p> <!-- paragraphe vide pour saut de ligne --> 
                    <a href="{{ path('app_logout') }}">
                            <button class="btn btn-danger">Se Déconnecter</button>
                        </a> 
                    
                </div>
            </div>
        </div>

        <!-- Account Settings -->
        <div class="col-md-8 mb-4 mt-4">
            <div class="card mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-center">
                    <h5 class="mb-0">Paramètres du Compte</h5>
                </div>
                <div class="card-body justify-content-between">
                    <div class="mb-3 mx-4 text-center">
                        <a href="{{ path('app_club_read') }}">
                            <button class="btn btn-success">Voir la page de mon club</button>
                        </a> 
                    </div>
                    <div class="mb-3 mx-4 text-center">
                    <a href="{{ path('app_forgot_password_request') }}">
                            <button class="btn btn-secondary">Modifier mon mot de passe</button>
                        </a> 
    
                    </div>
                    <div class="mb-3 mx-4 text-center">
                    <a href="{{ path('app_contact') }}">
                        <button class="btn btn-warning">Nous contacter</button>
                    </div>
                </div>
            </div>
            
            <!-- Second Account Settings -->
            <div class="card">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <div class="flex-grow-1 text-center">
                        <h5 class="mb-0">Options du compte</h5>
                    </div>
                    {% if not app.user.club %}
            <a href="{{ path('app_account_addclub') }}" class="btn btn-secondary text-decoration-none text-black">Rattacher à un club</a>
        {% endif %}
                </div>
                <div class="card-body d-flex justify-content-center">
                    <div class="btn-group">
                        <a href="{{ path('app_account_home') }}" class="link_nostyle text-white">
                            <button type="button" class="btn btn-success">Accéder à mon profil</button>
                        </a>
                        <a href="{{ path('app_tournament_browse') }}" class="link_nostyle text-black">
                            <button type="button" class="btn btn-secondary">M'inscrire à un tournoi</button>
                        </a>
                        <a href="{{ path('app_create_tournament') }}" class="link_nostyle text-black">
                            <button type="button" class="btn btn-warning">Créer un tournoi</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
